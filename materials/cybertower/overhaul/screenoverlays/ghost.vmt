LightmappedGeneric
{
	$basetexture "cybertower/overhaul/screenoverlays/ghost"

	$additive 1

	$basetexturetransform "center 0.5 0.5 scale 1.6 2 rotate 0 translate 0.5 0.5"

	Proxies
	{
		AnimatedTexture
		{
			animatedtexturevar "$basetexture"
			animatedtextureframenumvar "$frame"
			animatedtextureframerate 8
		}
	}
}